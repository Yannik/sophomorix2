   );

  if ($new_admin_group eq "lehrer") {
     # Es ist ein Lehrer
     &neuer_linux_user_lehrer();
   } else {
     &neuer_schueler($login_name_ok, $new_admin_group, $gecos, $klartext_passwort, $shell);

   }

  # Lehrer und Schueler
  # Nun werden die Quota des user gesetzt
#  &setze_quota($login_name_ok, \@quota_fs_liste, \@{ $login_quota{$login_name_ok} });


