} else {
    &titel("NOT setting quota (nothing quota related changed)");
}





# Creating Mailing Aliases and Lists
if (defined $p_admins
    or defined $p_groups
    or defined $p_members
    or defined $p_projects
    or defined $p_long_name
    or defined $mailalias
    or defined $maillist
    or $kill==1
   ) {
