    my @old_admins = 
       &Sophomorix::SophomorixPgLdap::fetchadmins_from_project($project);
    my @new_admins=&remove_duplicates_from_first_list(\@old_admins,\@admins);
    $p_admins=join(",",@new_admins);
    print "   Using: --Admins=$p_admins\n";
}


# --addmembergroups
